<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/notification_container">
    <ImageView
        android:id="@+id/notification_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_bm_trans_124"
        android:tint="@android:color/white"
        android:background="@color/colorAccent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/textBlackNormal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/notification_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/notification_pre"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@android:drawable/ic_media_previous"
                android:tint="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/notification_play"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@android:drawable/ic_media_play"
                android:tint="@color/colorPrimary"/>
            <ImageView
                android:id="@+id/notification_next"
                android:layout_weight="1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@android:drawable/ic_media_next"
                android:tint="@color/colorPrimary"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>